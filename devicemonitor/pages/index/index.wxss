/**index.wxss**/

/**重点在于阴影的设计**/

.hide {
  display: none;
}

.show {
  display: block;
}

.card {
  border: 1px solid #00a8a8;
  border-radius: 5px;
  background-color: #fff;
  box-shadow: 2px 1px 1px #ccc;
  margin: 5px;
  margin-top: 20rpx;
  position: relative;
  padding-left: 5px;
  flex-direction: column;
}

.weui-cell {
  font-size: 30rpx;
  border-bottom: #e5e5e5;
}

.complete-pre {
  color: black;
}

.pos-running {
  color: #00bf00;
}

.pos-offline {
  color: #a9a9a9;
}

.pos-abnormal {
  color: #f00;
}

/**设备信息**/

.page-body {
  width: 100%;
}

.page-section {
  width: 100%;
  height: 100%;
}

.page-section-spacing {
  box-sizing: border-box;
}

.swiper-item {
  display: block;
  width: 100%;
  height: 100%;
}

.function-list {
  background-color: #fff;
  text-align: center;
  line-height: 1;
}

.function-list navigator {
  padding: 8rpx 0;
  display: inline-block;
  width: 25%;
}

.function {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  border-right: 1px #d8d8d8 solid;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -ms-flex-direction: column;
  flex-direction: column;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
}

.no-border {
  border: none;
}

.function image {
  width: 64rpx;
  height: 64rpx;
}

.function text {
  margin-top: 28rpx;
  font-size: 28rpx;
}

.content-container {
  display: -webkit-flex;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.classify-container {
  width: 120rpx;
  background: #ececec;
  height: 100%;
}

.classify-container .classify {
  padding: 30rpx 0rpx;
  text-align: center;
}

.classify-container .classify.active {
  background: #fff;
  border-left: 4rpx solid #ff5777;
  border-top: 1rpx solid #efefef;
  border-bottom: 1rpx solid #efefef;
}

.classify-container .classify .name {
  display: inline-block;
  font-size: 28rpx;
  color: #646464;
  line-height: 1.2;
  text-align: left;
  pointer-events: none;
}

.classify-container .classify .name.active {
  color: #ff5777;
  font-weight: bold;
}

.detail-container {
  flex: 1;
  background: #fff;
  min-height: 100%;
}

.detail-container .title {
  text-align: left;
  padding: 20rpx 30rpx;
  color: grey;
  font-size: 22rpx;
  line-height: 30rpx;
  background: rgba(105, 195, 170, 0.3);
}

.detail-container .detail {
  position: relative;
  height: 200rpx;
  background: #fff;
  width: 30%;
  float: left;
  margin: 10rpx 10rpx;
  font-size: 32rpx;
  line-height: 40rpx;
  border-bottom: 2px solid #f7fcf8;
  display: flex-direction;
}

.detail-container .detail .pic {
  height: 84%;
  width: 98%;
  margin-right: 6rpx;
  display: flex;
}

.detail-container .detail .pic .fresh-tag {
  top: 20rpx;
  left: 8rpx;
  width: 40rpx;
  height: 40rpx;
}

.detail-container .detail .pic .show {
  color: rgb(10, 10, 10);
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.detail-container .detail .name {
  color: #000;
  font-size: 28rpx;
  line-height: 40%;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  justify-content: center;
  align-items: center;
}

.canvasnone {
  display: flex;
  align-items: center;
  justify-content: center;
}

.canvasnone .complete-center {
  color: #00a8a8;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
