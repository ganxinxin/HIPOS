/**index.wxss**/

.page-section {
  margin-top: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  padding: 0 50rpx;
  box-sizing: border-box;
}

.page-body-button {
  width: 360rpx;
}

.page-right-button {
  width: 520rpx;
}

.page-body-text {
  color: #bbb;
  font-size: 28rpx;
  line-height: 40rpx;
  margin: 0 0 100rpx 0;
  text-align: center;
}

.scan-image{
  width: 420rpx;
  height: 420rpx;
}
.page-scan-text {
  color: #bbb;
  font-size: 32rpx;
  line-height: 40rpx;
  margin: 0 0 100rpx 0;
  text-align: center;
}
.bottom-center{
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  align-content: center;
  align-items: center;
}
.input-text1 {
  font-size: 28rpx;
  width: 50%;
  align-content:flex-end;
  color: rgb(141, 141, 146);
}
.input-text2 {
  font-size: 32rpx;
  width: 50%;
  align-content:flex-start;
  color: blue;
}